{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "{{ title }}",
        "emoji": true
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Status:*\n{{ status }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Model Version:*\n{{ model_version }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Execution Time:*\n{{ execution_time }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Timestamp:*\n{{ timestamp }}"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Key Metrics:*\n‚Ä¢ Mean Semantic Similarity: {{ mean_semantic_sim }}\n‚Ä¢ Mean Precision@K: {{ mean_precision_at_k }}"
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Additional Information:*\n‚Ä¢ Git Commit: `{{ git_commit_hash }}`\n‚Ä¢ Branch: `{{ git_branch }}`"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View GitHub Actions",
            "emoji": true
          },
          "url": "{{ github_actions_run_url }}",
          "style": "primary"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View W&B Dashboard",
            "emoji": true
          },
          "url": "{{ wandb_run_url }}"
        }
      ]
    }
  ],
  "success_blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "‚úÖ FrontShiftAI Pipeline Success",
        "emoji": true
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "Pipeline completed successfully! Model *{{ model_version }}* has been deployed."
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Mean Semantic Similarity:*\n{{ mean_semantic_sim }}"
        },
        {
          "type": "mrkdwn",
          "text": "*Mean Precision@K:*\n{{ mean_precision_at_k }}"
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "‚úÖ *Quality Gate:* {{ quality_gate_result }}"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View Run",
            "emoji": true
          },
          "url": "{{ github_actions_run_url }}",
          "style": "primary"
        }
      ]
    }
  ],
  "failure_blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "‚ùå FrontShiftAI Pipeline Failure",
        "emoji": true
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "Pipeline failed at stage: *{{ failed_stage }}*"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Failure Reason:*\n{{ failure_reason }}"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "üîß *Troubleshooting:*\n‚Ä¢ Check GitHub Actions logs\n‚Ä¢ Verify environment variables\n‚Ä¢ Review quality gate thresholds"
      }
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View Logs",
            "emoji": true
          },
          "url": "{{ github_actions_run_url }}",
          "style": "danger"
        },
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "Get Support",
            "emoji": true
          },
          "url": "{{ support_url }}"
        }
      ]
    }
  ]
}

